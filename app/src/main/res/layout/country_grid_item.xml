<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="#fff"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/CountryFlagImageView"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/drapeau_du_pays" />

    <TextView
        android:id="@+id/CountryNameTextView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CountryFlagImageView"
        android:layout_alignStart="@+id/CountryFlagImageView"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Population"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/CountryFlagImageView"
        app:layout_constraintTop_toBottomOf="@+id/CountryFlagImageView"
        tools:ignore="HardcodedText" />
</RelativeLayout>